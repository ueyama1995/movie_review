<div class="container">
  <div class="row">
    <div class='mx-auto col-5 col-sm-5 col-lg-8 col-xl-8'>
      <h2>パスワード変更</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field">
          <%= f.label :password, "新しいパスワード" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "確認のためもう一度新しいパスワードを入力してください" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード" %>
        </div>
      
        <div class="actions">
          <%= f.submit "パスワードを変更する" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
