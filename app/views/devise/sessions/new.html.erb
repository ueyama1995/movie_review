<div class="homes_back">
  <div class="container">
    <div class="row">
      <div class='mx-auto col-5 col-sm-5 col-lg-8 col-xl-8'>
        <h2><i class="fas fa-sign-in-alt">ログイン</i></h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを保存する %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン",class: "btn btn-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
