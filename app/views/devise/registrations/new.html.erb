<div class="homes_back">
  <div class="container">
    <div class="row">
      <div class='mx-auto col-5 col-sm-5 col-lg-8 col-xl-8'>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="table table-bordered table-condensed">
          <span class = "user_session" >
            <tbody>
              
              <div class="form-grop row">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <h2><i class="fas fa-user-plus">新規登録</i></h2>
                    <td style = "width:40%">氏</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_field :last_name, autofocus: true %>
                    </td>
                  </tr>
                </div>
              </div>
              
              <div class="form-grop row">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>名</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_field :first_name, autofocus: true %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>セイ</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_field :kana_last_name, autofocus: true %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>メイ</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_field :kana_first_name, autofocus: true %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>ニックネーム</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_field :nickname, autofocus: true %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row mb-3">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>メールアドレス</td>
                    <td class = "info border border-dark table-info">
                      <%= f.text_area :email, autofocus: true, autocomplete: "email" %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row mb-3">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>パスワード
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字以上)</em>
                      <% end %>
                    </td>
                    <td class = "info border border-dark table-info">
                      <%= f.password_field :password, autocomplete: "new-password" %>
                    </td>
                  </tr>
                </div>
              </div>
            
              <div class="form-grop row mb-3">
                <div class="col-form-label col-sm-3">
                  <tr class="col-xs-5 border border-dark table-light">
                    <td>確認のためもう一度入力してください。</td>
                    <td class = "info border border-dark table-info">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </td>
                  </tr>
                </div>
              </div>
            </tbody>
          </span>
          </table>
              <div class="actions">
                <p><%= f.submit "新規会員登録する",class: "btn btn-primary" %></p>
              </div>
            <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


