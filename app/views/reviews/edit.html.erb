<%= form_with model:@review, local:true do |f| %>
    <h1>レビュー変更</h1>
    <p>タイトル</p>
    <%= f.text_field :title, autofocus: true %>
    <p>ジャンル</p>
    <%= f.select :review, [["洋画", "洋画"], ["邦画", "邦画"]], include_blank: "選択して下さい" %>
      <div id="value_stars">
        <label>評価</label>
      </div>
      <script>
        $('#value_stars').raty({
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'review[value]' //登録するモデル名とカラム名
        });
      </script>

    <p>レビュー</p>
    <%= f.text_area :comment, autofocus: true %>
    <div class="px-5 px-sm-0">
      <%= f.submit 'レビューを更新する',class: "btn btn-success" %>
    </div>
<% end %>
  <%= link_to '戻る',review_path %>