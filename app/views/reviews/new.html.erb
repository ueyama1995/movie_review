<%= form_with model:@review, local:true do |f| %>
  <table>
    <div class="form-grop row">
      <div class="col-form-label col-sm-3">
        <tr>
          <h1>レビュー投稿</h1>
            <p>タイトル</p>
            <%= f.text_field :title,rows:'3', autofocus: true %>
            <p>ジャンル</p>
            <%= f.select :category, [["洋画", "洋画"], ["邦画", "邦画"]], include_blank: "選択して下さい" %>
            <div id="value_stars">
              <label>評価</label>
            </div>
            <script>
              $('#value_stars').raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                starHalf: "<%= asset_path('star-half.png') %>",
                scoreName: 'review[value]' //登録するモデル名とカラム名
              });
            </script>
            <p>レビュー</p>
            <%= f.text_area :comment, rows:'5',placeholder: "ここに記入してください" %>
            <div class="px-5 px-sm-0">
              <%= f.submit '投稿する',class: "btn btn-success" %>
            </div>
        </tr>
       </div>
    </div>
  </table>
<% end %>
<%= link_to '戻る',reviews_path,class: "text-danger" %>