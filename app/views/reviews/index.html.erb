  
  <div class='container'>
   <div class='row'>
    <div class='mx-auto col-5 py-3'>
     <div class="row offset-1 mb-4 ">
              <h1>レビュー一覧</h1>
      <tp><%= link_to "投稿する",new_review_path, data: {"turbolinks" => false},class: "btn btn-success" %></tp>
            <% @reviews.each do |review| %>
               <table class="table table-bordered table-condensed">
                  <tbody>
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>投稿日時</td>
                          <td class="info border border-dark table-active">
                          <%= l review.created_at %><br/>
                          </td>
                        </tr>
                      </div>
                    </div>
                    
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>ニックネーム</td>
                          <td class="info border border-dark table-active">
                           <%= review.user.nickname %><br/>
                          </td>
                        </tr>
                      </div>
                    </div>
                    
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>タイトル</td>
                          <td class="info border border-dark table-active">
                          %= review.movie.title %<br/>
                          </td>
                        </tr>
                      </div>
                    </div>
                    
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>ジャンル</td>
                          <td class="info border border-dark table-active">
                          %= review.movie.category_id %<br/>
                          </td>
                        </tr>
                      </div>
                    </div>
                    
                     <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>評価</td>
                          <td class="review-value" data-score="<%= review.value %>"></td>
                          <script>
                            $('.review-value').raty({
                              readOnly: true,
                              score: function() {
                              },
                              path: '/assets/'
                            });
                          </script>
                        </tr>
                      </div>
                    </div>
                    
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>レビュー</td>
                          <td class="info border border-dark table-active">
                           <%= review.comment %><br/>
                          </td>
                        </tr>
                      </div>
                    </div>    
                    
                    <div class="form-grop row">
                      <div class="col-form-label col-sm-3">
                        <tr class="col-xs-5 border border-dark">
                          <td>いいね</td>
                          <td class="info border border-dark table-active">
                           <%= render 'reviews/like', review: review %><br/>
                          </td>
                        </tr>
                      </div>
                    </div>        
                        <p></p>
                        <%= paginate @reviews %>
                        <p><%=link_to "詳細を見る",review_path(review.id),class: "btn btn-success" %>
                        </p>
                    <% end %>
                  </tbody>
               </table>
     </div>
    </div>
   </div>
  </div>